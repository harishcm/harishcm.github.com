strict graph framework {
  size="3.4,3.4!";
  dpi=72;
  fontsize=18; /* pt */
  node [shape=record, style="rounded", 
        penwidth=0, fontname="Liberation Sans", fontcolor="goldenRod"];
  edge [color="#CCCCCC"];
  bgcolor="transparent";
  truecolor=true;

  0 [label="Framework", fontcolor="indianRed", fontsize=21, labelloc=b];
  {
    rank=same;
    a [label="Ad-hoc\nInterests"];
    b [label="Learning\nProjects"];
  }
  {
    rank=same;
    c [label="Improving\nLearning\nItself"];
    d [label="Record\nKeeping"];
  }

  0 -- a;
  0 -- b;
  0 -- c;
  0 -- d;

  a -- {b c d};
  b -- {a c d};
  c -- {a b d};
  d -- {a b c};

  /* a -- b -- c -- d -- a; */

}
  
  
